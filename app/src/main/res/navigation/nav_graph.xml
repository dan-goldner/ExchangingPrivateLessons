<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- 🔵 Splash → Auth -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.exchangingprivatelessons.ui.splash.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_auth"
            app:destination="@id/authFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- 🔐 Auth → Home -->
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.exchangingprivatelessons.ui.auth.AuthFragment"
        android:label="Auth">
        <action
            android:id="@+id/action_auth_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- 🏠 Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.exchangingprivatelessons.ui.home.HomeFragment"
        android:label="Home">

        <!-- 🔹 השיעורים שאני מציע -->
        <action
            android:id="@+id/action_home_to_lessonList_mine"
            app:destination="@id/lessonListFragment">
            <argument
                android:name="mode"
                app:argType="string"
                android:defaultValue="MINE" />
        </action>

        <!-- 🔹 שיעורים שאני יכול לקחת (זמינים, לא שלי) -->
        <action
            android:id="@+id/action_home_to_lessonList_available"
            app:destination="@id/lessonListFragment">
            <argument
                android:name="mode"
                app:argType="string"
                android:defaultValue="AVAILABLE" />
        </action>

        <action
            android:id="@+id/action_homeFragment_to_requestsFragment"
            app:destination="@id/requestsFragment" />

        <action
            android:id="@+id/action_homeFragment_to_allChatsFragment"
            app:destination="@id/allChatsFragment" />

        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <!-- 🧑‍🏫 Lessons -->
    <fragment
        android:id="@+id/lessonListFragment"
        android:name="com.example.exchangingprivatelessons.ui.lesson.LessonListFragment"
        android:label="Lessons">

        <argument
            android:name="mode"
            app:argType="string"
            android:defaultValue="AVAILABLE" />

        <action
            android:id="@+id/action_lessonList_to_addEditLesson"
            app:destination="@id/addEditLessonFragment" />

        <action
            android:id="@+id/action_lessonList_to_lessonDetails"
            app:destination="@id/lessonDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditLessonFragment"
        android:name="com.example.exchangingprivatelessons.ui.lesson.AddEditLessonFragment"
        android:label="Edit Lesson">
        <argument
            android:name="lessonId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="" />

    </fragment>

    <fragment
        android:id="@+id/lessonDetailsFragment"
        android:name="com.example.exchangingprivatelessons.ui.lesson.LessonDetailsFragment"
        android:label="Lesson Details">
        <argument
            android:name="lessonId"
            app:argType="string" />
        <action
            android:id="@+id/action_lessonDetailsFragment_to_addEditLessonFragment"
            app:destination="@id/addEditLessonFragment" />

    </fragment>

    <!-- ⭐ Rating (BottomSheet) -->
    <dialog
        android:id="@+id/ratingBottomSheet"
        android:name="com.example.exchangingprivatelessons.ui.lesson.RatingBottomSheet"
        android:label="Rating">
        <argument
            android:name="lessonId"
            app:argType="string" />
    </dialog>

    <!-- 💬 Chat -->
    <fragment
        android:id="@+id/allChatsFragment"
        android:name="com.example.exchangingprivatelessons.ui.chat.AllChatsFragment"
        android:label="All Chats">
        <action
            android:id="@+id/actionAllChatsFragmentToChatFragment"
            app:destination="@id/chatFragment">
            <argument
                android:name="chatId"
                app:argType="string" />
            <argument
                android:name="peerName"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.exchangingprivatelessons.ui.chat.ChatFragment"
        android:label="Chat">
        <argument
            android:name="chatId"
            app:argType="string" />
        <argument
            android:name="peerName"
            app:argType="string" />
    </fragment>

    <!-- 📄 Requests -->
    <fragment
        android:id="@+id/requestsFragment"
        android:name="com.example.exchangingprivatelessons.ui.request.RequestsFragment"
        android:label="Requests">
        <action
            android:id="@+id/action_requests_to_requestDetail"
            app:destination="@id/requestDetailSheet" />
    </fragment>

    <dialog
        android:id="@+id/requestDetailSheet"
        android:name="com.example.exchangingprivatelessons.ui.request.RequestDetailSheet"
        android:label="Request Detail">
        <argument
            android:name="requestId"
            app:argType="string" />
    </dialog>

    <!-- 👤 Profile -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.exchangingprivatelessons.ui.profile.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profile_to_edit"
            app:destination="@id/editProfileSheet" />
    </fragment>

    <dialog
        android:id="@+id/editProfileSheet"
        android:name="com.example.exchangingprivatelessons.ui.profile.EditProfileSheet"
        android:label="Edit Profile" />
</navigation>
