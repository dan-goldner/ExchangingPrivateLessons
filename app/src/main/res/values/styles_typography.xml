<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Display / Headlines -->
    <style name="TextAppearance.SkillSwap.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="TextAppearance.SkillSwap.HeadlineLarge" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="TextAppearance.SkillSwap.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextAppearance.SkillSwap.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <!-- Titles -->
    <style name="TextAppearance.SkillSwap.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextAppearance.SkillSwap.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextAppearance.SkillSwap.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!-- Body -->
    <style name="TextAppearance.SkillSwap.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.SkillSwap.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.SkillSwap.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Caption / Labels -->
    <style name="TextAppearance.SkillSwap.Caption" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextAppearance.SkillSwap.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/font_family_inter</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!-- Meta line: “By • 4 hr ago • ★ 0.0 (0)” -->
    <style name="TextAppearance.SkillSwap.MetaLine"
        parent="TextAppearance.SkillSwap.BodyMedium">
        <!-- מעט גדול יותר מה‑Body, SemiBold -->
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">500</item>

        <!-- צבע רך יותר כדי לא להתחרות בכותרת/תיאור -->
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>

        <!-- ריווח אותיות קל לקריאות -->
        <item name="android:letterSpacing">0.01</item>
    </style>


</resources>
