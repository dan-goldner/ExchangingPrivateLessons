<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- קבוצה להחלפת מצב: אליי / ששלחתי -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/modeToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReceived"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_requests_i_received"
            android:checked="true"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSent"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_requests_i_sent"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- סינון סטטוס (רק למצב SENT) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/statusChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="56dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_pending"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:checked="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_approved"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approved"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_declined"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Declined"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- רשימה -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/requestsRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="112dp"
        android:clipToPadding="false"/>

    <!-- Empty‑state -->
    <TextView
        android:id="@+id/emptyTv"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:text="@string/empty_list"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
