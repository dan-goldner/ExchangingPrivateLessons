<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- קבוצה שמכילה את התוכן הרגיל -->
        <ScrollView
            android:id="@+id/contentGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- טקסט סטטיסטיקה -->
                <TextView
                    android:id="@+id/txtLessonsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שיעורים זמינים: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txtRequestsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="בקשות נכנסות: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- כפתורים -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAvailabaleLessons"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="שיעורים זמינים"
                    android:icon="@drawable/ic_school"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMyLessons"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="השיעורים שלי"
                    android:icon="@drawable/ic_book"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRequests"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="בקשות"
                    android:icon="@drawable/ic_swap_horizontal"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChats"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="שיחות"
                    android:icon="@drawable/ic_chat"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnProfile"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="פרופיל"
                    android:icon="@drawable/ic_person"
                    app:iconPadding="8dp" />
            </LinearLayout>
        </ScrollView>

        <!-- טוען בעומס -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
