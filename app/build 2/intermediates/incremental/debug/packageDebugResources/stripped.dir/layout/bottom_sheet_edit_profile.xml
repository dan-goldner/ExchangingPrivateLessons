<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Avatar preview -->
    <ImageView
        android:id="@+id/avatarIv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_placeholder"
        android:background="@drawable/profile_circle_bg"
        android:clipToOutline="true"/>

    <!-- הוסף מיד אחרי avatarIv -->
    <TextView
        android:id="@+id/avatarHintTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="@string/choose_photo"/>


    <Button
        android:id="@+id/removeAvatarBtn"
        android:text="@string/remove_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/displayEt"
        android:hint="@string/display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/bioEt"
        android:hint="@string/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/saveBtn"
        style="@style/Widget.Material3.Button"
        android:text="@string/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>


    <!-- 🗑️ Delete account -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteAccountBtn"
        style="@style/Widget.SkillSwap.Button.FilledError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_l"
        android:text="@string/delete_account"/>
</LinearLayout>
